<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ad7ab5">





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m50"
        android:id="@+id/car_layout"

        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/car_logo"

            />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_below="@+id/car_layout"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/m80"
    android:paddingBottom="@dimen/p20">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_shape"
        android:layout_marginLeft="@dimen/m10"
        android:layout_marginRight="@dimen/m10"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:textColorHint="#412e7c"
        android:hint="Select Vehicle"
        android:textSize="15sp"
        android:paddingLeft="10dp"
        android:id="@+id/bachat_vehicle_text"
        android:paddingRight="5dp"
        android:singleLine="true"
        android:gravity="left|center"
        android:textColor="#412e7c" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_shape"
        android:layout_marginLeft="@dimen/m10"
        android:layout_marginRight="@dimen/m10"
        android:layout_marginTop="15dp"
        android:textColorHint="#412e7c"
        android:hint="Select Driver"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:textSize="15sp"
        android:paddingLeft="10dp"
        android:id="@+id/bachat_driver_text"
        android:paddingRight="5dp"
        android:singleLine="true"
        android:gravity="left|center"
        android:textColor="#412e7c" />

    <EditText
        android:layout_marginLeft="@dimen/m10"
        android:layout_marginRight="@dimen/m10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_shape"
        android:layout_marginTop="15dp"
        android:textColorHint="#412e7c"
        android:hint="Rate/Day (Rs.)"
        android:textSize="15sp"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:paddingLeft="10dp"
        android:inputType="number"
        android:id="@+id/bachat_rate_per_day_text"
        android:paddingRight="5dp"
        android:singleLine="true"
        android:gravity="left|center"
        android:textColor="#412e7c" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bid by Lamb Samb"
        android:id="@+id/bachat_checkBox"
        android:layout_marginLeft="@dimen/m10"
        android:layout_marginTop="5dp"
        android:checked="false"
        android:buttonTint="#ffffff"
        android:textColor="#ffffff" />

    <EditText
        android:layout_marginLeft="@dimen/m10"
        android:layout_marginRight="@dimen/m10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_shape"

        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:layout_marginTop="@dimen/m5"
        android:textColorHint="#412e7c"
        android:hint="Total Fares (Rs.)"
        android:textSize="15sp"
        android:paddingLeft="10dp"
        android:inputType="number"
        android:id="@+id/bachat_total_fare_txt"
        android:visibility="gone"
        android:paddingRight="5dp"
        android:singleLine="true" />
    <Button
        android:layout_marginTop="20dp"
        android:layout_width="@dimen/w120"
        android:layout_height="wrap_content"

        android:background="@drawable/btn_shape_white"
        android:layout_gravity="center"
        android:textColor="#ad7ab5"
        android:text="Bid"
        android:textSize="20sp"
        android:id="@+id/bachat_bid_btn"
        android:textAllCaps="false"
        android:paddingLeft="@dimen/p10"
        android:paddingRight="@dimen/p10"
        android:paddingTop="7dp"
        android:paddingBottom="7dp" />
        </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
