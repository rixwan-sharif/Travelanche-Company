<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#c9a8ce">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#ad7ab5"
        android:visibility="visible"
        android:id="@+id/accepted_relative_layout">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Trips"
            android:id="@+id/textView2"
            android:layout_marginStart="80dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Bids"
            android:id="@+id/textView3"
            android:layout_marginEnd="80dp"
            android:layout_alignTop="@+id/textView2"
            android:layout_alignParentEnd="true"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@drawable/back_of"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/accepted_relative_layout"
        android:layout_marginRight="10dp">




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="26/11/2014"
            android:id="@+id/textView9"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="03:00 pm"
            android:id="@+id/textView0"
            android:layout_below="@+id/textView6"
            android:layout_alignEnd="@+id/textView6" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageView8"
            android:layout_below="@+id/textView7"
            android:layout_alignParentStart="true"
            android:layout_marginStart="46dp"
            android:layout_marginTop="22dp"
            android:background="#ffffff" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageView1"
            android:layout_alignTop="@+id/imageView2"
            android:layout_alignEnd="@+id/textView7"
            android:layout_marginEnd="46dp"
            android:background="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Gujranwala"
            android:id="@+id/textView1"
            android:layout_below="@+id/imageView2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="46dp"
            android:layout_marginTop="10dp"
            android:visibility="visible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="GLI 2009"
            android:id="@+id/textView90"
            android:layout_alignBottom="@+id/textView10"
            android:layout_alignStart="@+id/imageView3"
            android:visibility="visible" />



<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textAppearance="?android:attr/textAppearanceSmall"
android:text="26/11/2014"
android:id="@+id/textView6"
android:layout_alignParentTop="true"
android:layout_alignParentEnd="true"
android:layout_marginRight="4dp"
android:layout_marginTop="4dp" />

<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textAppearance="?android:attr/textAppearanceSmall"
android:text="03:00 pm"
android:id="@+id/textView7"
android:layout_below="@+id/textView6"
android:layout_alignEnd="@+id/textView6" />

<de.hdodenhof.circleimageview.CircleImageView
android:layout_width="90dp"
android:layout_height="90dp"
android:id="@+id/imageView2"
android:layout_below="@+id/textView7"
android:layout_alignParentStart="true"
android:layout_marginStart="46dp"
android:layout_marginTop="22dp"
android:background="#ffffff" />

<de.hdodenhof.circleimageview.CircleImageView
android:layout_width="90dp"
android:layout_height="90dp"
android:id="@+id/imageView3"
android:layout_alignTop="@+id/imageView2"
android:layout_alignEnd="@+id/textView7"
android:layout_marginEnd="46dp"
android:background="#ffffff" />

<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textAppearance="?android:attr/textAppearanceMedium"
android:text="Gujranwala"
android:id="@+id/textView10"
android:layout_below="@+id/imageView2"
android:layout_alignParentStart="true"
android:layout_marginStart="46dp"
android:layout_marginTop="10dp"
android:visibility="visible" />

<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textAppearance="?android:attr/textAppearanceMedium"
android:text="GLI 2009"
android:id="@+id/textView12"
android:layout_alignBottom="@+id/textView10"
android:layout_alignStart="@+id/imageView3"
android:visibility="visible" />

<Button
android:layout_width="90dp"
android:layout_height="wrap_content"
android:text="Details"
android:id="@+id/button"
android:layout_alignParentBottom="true"
android:layout_alignStart="@+id/imageView2"
android:layout_marginBottom="10dp"
android:background="@drawable/button_whole"
android:textAllCaps="false"/>

<Button
android:layout_width="90dp"
android:layout_height="wrap_content"
android:text="Details"
android:id="@+id/button2"
android:layout_alignBottom="@+id/button"
android:layout_alignStart="@+id/imageView3"
android:background="@drawable/button_whole"
android:textAllCaps="false"/>

    </RelativeLayout>
</RelativeLayout>

