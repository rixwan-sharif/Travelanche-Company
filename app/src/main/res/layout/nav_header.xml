<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="145dp"
    android:background="#ad7ab5"
    android:padding="10dp"
    android:orientation="vertical"
    android:id="@+id/nav_header">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/person"
        android:transitionName="profileimage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="26dp"
        android:textColor="#FFF"
        android:gravity="left"
        android:id="@+id/profile_user_name"
        android:textStyle="normal|bold"
        android:layout_marginLeft="30dp"
        android:layout_alignTop="@+id/profile_image"
        android:layout_toRightOf="@+id/profile_image"
        android:layout_toEndOf="@+id/profile_image"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="92XXXXXXXXXX"
        android:id="@+id/profile_user_phone"
        android:gravity="left"
        android:textSize="18dp"
        android:textColor="#fff"
        android:layout_below="@+id/profile_user_name"
        android:layout_alignLeft="@+id/profile_user_name"
        android:layout_alignStart="@+id/profile_user_name"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="6dp" />

</RelativeLayout>