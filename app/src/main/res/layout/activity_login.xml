<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ad7ab5"

    >





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout


            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m50"
                android:id="@+id/car_layout"
                android:gravity="center_horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/car_logo"

                    />
            </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_marginTop="@dimen/m80"
               android:paddingBottom="@dimen/p20"


               android:baselineAligned="false">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"

                android:paddingLeft="@dimen/p10"


                android:ems="10"
                android:id="@+id/login_phone_number_text"
                android:inputType="phone"
                android:background="@drawable/edit_text_shape"
                android:hint="Phone"
                android:textColorHint="#a6083d29"
                android:textColor="#a6083d29"
                android:paddingRight="@dimen/p10"
                android:singleLine="true"
                android:drawablePadding="15dp"
                android:drawableLeft="@drawable/ic_phone_purple"


                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/linearLayout_image"
                android:textSize="16sp"
                android:maxLength="14"
                android:text="+92 3XXXXXXXXX" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/p10"
                android:inputType="textPassword"
                android:ems="10"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:id="@+id/new_cnfrm_pass_text"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/login_phone_number_text"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_shape"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Password"
                android:textColorHint="#a6083d29"
                android:textColor="#a6083d29"
                android:paddingRight="@dimen/p10"
                android:singleLine="true"
                android:drawablePadding="15dp"
                android:drawableLeft="@drawable/ic_lock_purple"
                android:textSize="16sp"
                android:maxLength="15" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password"
                android:id="@+id/forgot_pass_textview"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:layout_below="@+id/new_cnfrm_pass_text"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:text="Log In"
                android:id="@+id/set_new_pass_btn"
                android:layout_below="@+id/forgot_pass_textview"
                android:layout_alignParentTop="true"
                android:background="@drawable/btn_shape_white"
                android:textColor="#ad7ab5"
                android:textSize="17sp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center" />

           </LinearLayout>
        </LinearLayout>


    </ScrollView>

</LinearLayout>
