<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/mylayout"
    android:background="@drawable/backgrounddd">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <include layout="@layout/nav_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="bottom"
        android:paddingBottom="@dimen/m40"
        android:id="@+id/relativeLayout">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trips"
            android:id="@+id/client_trips_btn"
            android:background="@drawable/trips"
            android:layout_marginLeft="@dimen/m30"
            android:layout_marginRight="@dimen/m30"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:textColor="#ad7ab5" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Bids"
            android:id="@+id/my_bids_btn"
            android:background="@drawable/bidsss"
            android:layout_marginLeft="@dimen/m30"
            android:layout_marginRight="@dimen/m30"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:textAllCaps="false"
            android:textColor="#ad7ab5" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accepted Bids"
            android:id="@+id/accepted_bis_btn"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="@dimen/m30"
            android:layout_marginRight="@dimen/m30"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:textColor="#ad7ab5"
            android:paddingLeft="20dp"
            android:background="@drawable/checke" />


    </LinearLayout>


    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/mynavigationview"
        app:itemIconTint="#ad7ab5"
        app:menu="@menu/nav_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        android:theme="@style/Drawer_menu_Theme"

        >

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>



