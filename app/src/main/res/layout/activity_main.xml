<?xml version="1.0" encoding="utf-8"?>


<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/mylayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgrounddd"
        android:id="@+id/relativeLayout">

        <include layout="@layout/nav_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/h65"
            android:text="Trips"
            android:id="@+id/client_trips_btn"
            android:background="@drawable/trips"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/activity_main__page_sign_up_btn_width"
            android:layout_marginLeft="@dimen/m30"
            android:layout_marginRight="@dimen/m30"
            android:textStyle="bold"
            android:textSize="@dimen/s20"
            android:textAllCaps="false"
            android:textColor="#ad7ab5" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/h65"
            android:text="Your Bids"
            android:id="@+id/my_bids_btn"
            android:background="@drawable/bidsss"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/m100"
            android:layout_marginLeft="@dimen/m30"
            android:layout_marginRight="@dimen/m30"
            android:textStyle="bold"
            android:textSize="@dimen/s20"
            android:textAllCaps="false"
            android:textColor="#ad7ab5" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/h65"
            android:text="Accepted Bids"
            android:id="@+id/accepted_bis_btn"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/m20"
            android:layout_marginLeft="@dimen/m30"
            android:layout_marginRight="@dimen/m30"
            android:textStyle="bold"
            android:textSize="@dimen/s20"
            android:textAllCaps="false"
            android:textColor="#ad7ab5"
            android:paddingLeft="@dimen/p20"
            android:background="@drawable/checke" />

    </RelativeLayout>


    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/mynavigationview"
        app:itemIconTint="#ad7ab5"
        app:menu="@menu/nav_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        android:theme="@style/Drawer_menu_Theme"

        >

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>



