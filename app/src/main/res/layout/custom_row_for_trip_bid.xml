<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity"
    android:background="@drawable/main_back">







<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="275dp"
    android:layout_centerHorizontal="true"
    android:background="@drawable/background_my_bids">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="26/11/2014"
            android:id="@+id/accepted_bid_date_textview"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="6dp"
            android:textColor="#ffffff"
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="03:00 pm"
            android:id="@+id/accepted_bid_time_textview"
            android:layout_below="@+id/accepted_bid_date_textview"
            android:layout_alignEnd="@+id/accepted_bid_date_textview"
            android:textColor="#ffffff"
            android:layout_marginTop="3dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/accepted_bid_client_pic"
            android:layout_below="@+id/accepted_bid_time_textview"
            android:layout_alignParentStart="true"
            android:layout_marginStart="46dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/person" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/accepted_bid_vehicle_pic"
            android:layout_alignTop="@+id/accepted_bid_client_pic"
            android:layout_alignEnd="@+id/accepted_bid_time_textview"
            android:layout_marginEnd="46dp"
            android:background="@drawable/person" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Gujranwala"
            android:id="@+id/accepted_bid_trip_name"
            android:layout_below="@+id/accepted_bid_client_pic"
            android:layout_alignParentStart="true"
            android:layout_marginStart="46dp"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="GLI 2009"
            android:id="@+id/accepted_bid_vehilce_name"
            android:visibility="visible"
            android:textColor="#ffffff"
            android:layout_alignTop="@+id/accepted_bid_trip_name"
            android:layout_toEndOf="@+id/accepted_bid_trip_name"
            android:layout_marginLeft="110dp" />

        <Button
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Trip Details"
            android:id="@+id/accepted_bid_trip_btn"
            android:background="@drawable/btn_shape_purple"
            android:textAllCaps="false"
            android:layout_below="@+id/accepted_bid_trip_name"
            android:layout_alignStart="@+id/accepted_bid_trip_name"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff" />
        <Button
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Bid Details"
            android:id="@+id/accepted_bid_bid_btn"
            android:layout_alignBottom="@+id/accepted_bid_trip_btn"
            android:layout_alignStart="@+id/accepted_bid_vehicle_pic"
            android:background="@drawable/btn_shape_purple"
            android:textAllCaps="false"
            android:textColor="#ffffff" />

          </RelativeLayout>
    </RelativeLayout>


